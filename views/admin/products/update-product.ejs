<%- include('../../shared/includes/head', { pageTitle: 'Update Product' }) %>
    <link rel="stylesheet" href="/styles/auth.css">
    <style>
        /* New Product Form Styling */
        .form-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 2rem;
        }

        .form-header {
            background: rgba(10, 14, 39, 0.85);
            backdrop-filter: saturate(180%) blur(20px);
            -webkit-backdrop-filter: saturate(180%) blur(20px);
            border: 1px solid rgba(0, 194, 255, 0.3);
            border-radius: 16px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 
                0 8px 32px rgba(0, 0, 0, 0.3),
                0 0 20px rgba(0, 194, 255, 0.1),
                inset 0 1px 0 rgba(255, 255, 255, 0.05);
            text-align: center;
        }

        .form-header h1 {
            color: #00bcff;
            font-size: 2rem;
            font-weight: 700;
            margin: 0;
            text-shadow: 0 0 20px rgba(0, 188, 255, 0.4);
        }

        .product-form {
            background: rgba(10, 14, 39, 0.85);
            backdrop-filter: saturate(180%) blur(20px);
            -webkit-backdrop-filter: saturate(180%) blur(20px);
            border: 1px solid rgba(0, 194, 255, 0.2);
            border-radius: 16px;
            padding: 2.5rem;
            box-shadow: 
                0 8px 32px rgba(0, 0, 0, 0.3),
                0 0 20px rgba(0, 194, 255, 0.1),
                inset 0 1px 0 rgba(255, 255, 255, 0.05);
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-group label {
            display: block;
            color: rgba(255, 255, 255, 0.9);
            font-weight: 600;
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
            letter-spacing: 0.3px;
        }

        .form-group label i {
            color: #00bcff;
            margin-right: 0.5rem;
        }

        .form-control {
            width: 100%;
            padding: 0.9rem 1.2rem;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(0, 194, 255, 0.3);
            border-radius: 10px;
            color: #ffffff;
            font-size: 1rem;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            -webkit-text-fill-color: #ffffff;
        }

        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.4);
        }

        .form-control:focus {
            outline: none;
            background: rgba(255, 255, 255, 0.08);
            border-color: rgba(0, 194, 255, 0.6);
            box-shadow: 
                0 0 20px rgba(0, 194, 255, 0.2),
                inset 0 0 10px rgba(0, 194, 255, 0.1);
        }

        .form-control:hover {
            border-color: rgba(0, 194, 255, 0.5);
        }

        textarea.form-control {
            resize: vertical;
            min-height: 120px;
            font-family: inherit;
        }

        input[type="file"].form-control {
            padding: 0.7rem 1rem;
            cursor: pointer;
        }

        input[type="file"].form-control::file-selector-button {
            background: rgba(0, 194, 255, 0.2);
            border: 1px solid rgba(0, 194, 255, 0.4);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 6px;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-right: 1rem;
        }

        input[type="file"].form-control::file-selector-button:hover {
            background: rgba(0, 194, 255, 0.3);
            border-color: rgba(0, 194, 255, 0.6);
        }

        .form-actions {
            display: flex;
            gap: 1rem;
            justify-content: flex-end;
            margin-top: 2rem;
            padding-top: 1.5rem;
            border-top: 1px solid rgba(0, 194, 255, 0.2);
        }

        .btn {
            padding: 0.9rem 2rem;
            border-radius: 10px;
            border: 1px solid;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
        }

        .btn-reset {
            background: rgba(255, 255, 255, 0.05);
            border-color: rgba(255, 255, 255, 0.3);
            color: rgba(255, 255, 255, 0.8);
        }

        .btn-reset:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: rgba(255, 255, 255, 0.5);
            color: white;
            box-shadow: 0 0 15px rgba(255, 255, 255, 0.2);
        }

        .btn-save {
            background: linear-gradient(135deg, rgba(0, 194, 255, 0.3) 0%, rgba(138, 43, 226, 0.3) 100%);
            border-color: rgba(0, 194, 255, 0.5);
            color: white;
            box-shadow: 0 4px 15px rgba(0, 194, 255, 0.3);
        }

        .btn-save:hover {
            background: linear-gradient(135deg, rgba(0, 194, 255, 0.4) 0%, rgba(138, 43, 226, 0.4) 100%);
            border-color: rgba(0, 194, 255, 0.7);
            transform: translateY(-2px);
            box-shadow: 
                0 6px 25px rgba(0, 194, 255, 0.4),
                0 0 30px rgba(0, 194, 255, 0.3);
        }

        .form-hint {
            color: rgba(255, 255, 255, 0.5);
            font-size: 0.85rem;
            margin-top: 0.3rem;
        }

        @media (max-width: 768px) {
            .form-container {
                padding: 1rem;
            }

            .product-form {
                padding: 1.5rem;
            }

            .form-actions {
                flex-direction: column;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
    </head>

    <body class="auth-page">
        <%- include('../../shared/includes/header') %>

            <main style="padding-top: 120px; min-height: 100vh;">
                <div class="form-container">
                    
                    <!-- Form Header -->
                    <div class="form-header">
                        <h1><i class="bi bi-plus-circle"></i> Update Product</h1>
                    </div>

                    <!-- Product Form -->
                    <%- include('./includes/product-form', { submitPath: '/admin/products/' + product.id }) %>

                </div>
            </main>

            <%- include('../../shared/includes/footer') %>