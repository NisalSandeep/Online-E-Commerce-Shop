<%- include('../../shared/includes/head', { pageTitle: 'SignUp' }) %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles/forms.css">
  <link rel="stylesheet" href="/styles/auth.css">
  </head>

  <body class="auth-page d-flex flex-column min-vh-100">
    <%- include('../../shared/includes/header') %>

      <main class="flex-grow-1 d-flex justify-content-center align-items-center p-3">
        <div class="card shadow-lg border-0 auth-transparent-card text-white w-100" style="max-width: 500px; border-radius: 1rem;">
          <div class="card-body p-4">
            <h2 class="text-center mb-4 fw-bold">Create New Account</h2>

            <% if(inputData.errorMessage) { %>
              <section class="alert">
                <h2>Invalid Input</h2>
                <p><%= inputData.errorMessage %></p>
              </section>
            <% } %>

            <form action="/signup" method="POST" >
              <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
              <div class="mb-3">
                <label for="email" class="form-label fw-semibold">E-Mail</label>
                <input type="email" id="email" name="email" class="form-control custom-input" value="<%= inputData.email %>"
                  placeholder="Enter your email" required>
              </div>

              <div class="mb-3">
                <label for="confirm-email" class="form-label fw-semibold">Confirm E-Mail</label>
                <input type="email" id="confirm-email" name="confirm-email" class="form-control custom-input" value="<%= inputData.confirmEmail %>"
                  placeholder="Confirm your email" required>
              </div>

              <div class="mb-3">
                <label for="password" class="form-label fw-semibold">Password</label>
                <input type="password" id="password" name="password" class="form-control custom-input"
                  placeholder="Enter a password" value="<%= inputData.password %>" minlength="8" required>
                <div class="form-text " style="color: rgb(182, 182, 182);">Minimum 8 characters required.</div>
              </div>

              <hr>

              <div class="mb-3">
                <label for="fullname" class="form-label fw-semibold">Full Name</label>
                <input type="text" id="fullname" name="fullname" value="<%= inputData.fullname %>" class="form-control custom-input"
                  placeholder="Your full name" required>
              </div>

              <div class="mb-3">
                <label for="street" class="form-label fw-semibold">Street</label>
                <input type="text" id="street" name="street" value="<%= inputData.street %>" class="form-control custom-input"
                  placeholder="Street address" required>
              </div>

              <div class="mb-3">
                <label for="postal" class="form-label fw-semibold">Postal Code</label>
                <input type="text" id="postal" name="postal" value="<%= inputData.postal %>" class="form-control custom-input"
                  placeholder="5-digit postal code" minlength="5" maxlength="5" required>
              </div>

              <div class="mb-3">
                <label for="city" class="form-label fw-semibold">City</label>
                <input type="text" id="city" name="city" value="<%= inputData.city %>" class="form-control custom-input" placeholder="City name"
                  required>
              </div>

              <div class="d-grid mt-4">
                <button type="submit" class="btn auth-transparent-btn btn-lg rounded-pill shadow-sm">
                  Create Account
                </button>
              </div>

              <p class="text-center mt-3 mb-0">
                Already have an account?
                <a href="/login" class="text-decoration-none fw-semibold">Login instead</a>
              </p>
            </form>
          </div>
        </div>
      </main>


      <%- include('../../shared/includes/footer') %>