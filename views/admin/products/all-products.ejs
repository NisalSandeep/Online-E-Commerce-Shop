<%- include('../../shared/includes/head', { pageTitle: 'All Products' }) %>
  <link rel="stylesheet" href="/styles/auth.css">
  <style>
    /* Admin Products Page Styling */
    .admin-container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 2rem;
    }

    .admin-header {
      background: rgba(10, 14, 39, 0.85);
      backdrop-filter: saturate(180%) blur(20px);
      -webkit-backdrop-filter: saturate(180%) blur(20px);
      border: 1px solid rgba(0, 194, 255, 0.3);
      border-radius: 16px;
      padding: 2rem;
      margin-bottom: 2rem;
      box-shadow: 
        0 8px 32px rgba(0, 0, 0, 0.3),
        0 0 20px rgba(0, 194, 255, 0.1),
        inset 0 1px 0 rgba(255, 255, 255, 0.05);
    }

    .admin-header h1 {
      color: #00bcff;
      font-size: 2rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
      text-shadow: 0 0 20px rgba(0, 188, 255, 0.4);
    }

    .admin-header p {
      color: rgba(255, 255, 255, 0.8);
      margin: 0;
    }

    .add-product-btn {
      background: linear-gradient(135deg, rgba(0, 194, 255, 0.2) 0%, rgba(138, 43, 226, 0.2) 100%);
      backdrop-filter: saturate(180%) blur(10px);
      -webkit-backdrop-filter: saturate(180%) blur(10px);
      border: 1px solid rgba(0, 194, 255, 0.4);
      color: white;
      padding: 0.75rem 1.5rem;
      border-radius: 10px;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      font-weight: 600;
      transition: all 0.3s ease;
      box-shadow: 0 4px 15px rgba(0, 194, 255, 0.2);
    }

    .add-product-btn:hover {
      background: linear-gradient(135deg, rgba(0, 194, 255, 0.3) 0%, rgba(138, 43, 226, 0.3) 100%);
      border-color: rgba(0, 194, 255, 0.6);
      transform: translateY(-2px);
      box-shadow: 
        0 6px 20px rgba(0, 194, 255, 0.3),
        0 0 30px rgba(0, 194, 255, 0.2);
      color: white;
    }

    /* Products Grid Section */
    .products-section {
      background: rgba(10, 14, 39, 0.85);
      backdrop-filter: saturate(180%) blur(20px);
      -webkit-backdrop-filter: saturate(180%) blur(20px);
      border: 1px solid rgba(0, 194, 255, 0.2);
      border-radius: 16px;
      padding: 2rem;
      box-shadow: 
        0 8px 32px rgba(0, 0, 0, 0.3),
        0 0 20px rgba(0, 194, 255, 0.1),
        inset 0 1px 0 rgba(255, 255, 255, 0.05);
    }

    .products-section h2 {
      color: white;
      font-size: 1.5rem;
      font-weight: 700;
      margin-bottom: 1.5rem;
      padding-bottom: 1rem;
      border-bottom: 1px solid rgba(0, 194, 255, 0.2);
    }

    .products-grid {
      list-style: none;
      padding: 0;
      margin: 0;
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 1.5rem;
    }

    .products-grid li {
      list-style: none;
    }

    /* Product Item Card Styling */
    .product-item {
      background: rgba(255, 255, 255, 0.05);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      border: 1px solid rgba(0, 194, 255, 0.2);
      border-radius: 12px;
      overflow: hidden;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      display: flex;
      flex-direction: column;
      height: 100%;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    .product-item:hover {
      transform: translateY(-5px);
      border-color: rgba(0, 194, 255, 0.5);
      box-shadow: 
        0 8px 25px rgba(0, 0, 0, 0.3),
        0 0 30px rgba(0, 194, 255, 0.2);
    }

    .product-image-wrapper {
      position: relative;
      width: 100%;
      padding-top: 75%; /* 4:3 Aspect Ratio */
      overflow: hidden;
      background: rgba(0, 0, 0, 0.3);
    }

    .product-image {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.3s ease;
    }

    .product-item:hover .product-image {
      transform: scale(1.05);
    }

    .product-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 194, 255, 0.1);
      display: flex;
      align-items: center;
      justify-content: center;
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .product-overlay i {
      color: white;
      font-size: 2rem;
      transform: scale(0);
      transition: transform 0.3s ease;
    }

    .product-item:hover .product-overlay {
      opacity: 1;
    }

    .product-item:hover .product-overlay i {
      transform: scale(1);
    }

    .product-content {
      padding: 1.5rem;
      flex-grow: 1;
      display: flex;
      flex-direction: column;
    }

    .product-title {
      color: white;
      font-size: 1.2rem;
      font-weight: 700;
      margin: 0 0 0.75rem 0;
      line-height: 1.3;
    }

    .product-summary {
      color: rgba(255, 255, 255, 0.7);
      font-size: 0.9rem;
      margin: 0 0 1rem 0;
      flex-grow: 1;
      line-height: 1.5;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    .product-price {
      color: #00bcff;
      font-size: 1.5rem;
      font-weight: 700;
      display: flex;
      align-items: center;
      gap: 0.25rem;
      text-shadow: 0 0 10px rgba(0, 188, 255, 0.3);
    }

    .product-actions {
      display: flex;
      gap: 0.75rem;
      padding: 1rem 1.5rem;
      background: rgba(0, 0, 0, 0.2);
      border-top: 1px solid rgba(0, 194, 255, 0.1);
    }

    .btn-action {
      flex: 1;
      padding: 0.7rem 1rem;
      border-radius: 8px;
      border: 1px solid;
      font-size: 0.9rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
    }

    .btn-edit {
      background: rgba(0, 194, 255, 0.15);
      border-color: rgba(0, 194, 255, 0.4);
      color: #00bcff;
    }

    .btn-edit:hover {
      background: rgba(0, 194, 255, 0.25);
      border-color: rgba(0, 194, 255, 0.6);
      color: #00e5ff;
      box-shadow: 0 0 15px rgba(0, 194, 255, 0.3);
      transform: translateY(-2px);
    }

    .btn-delete {
      background: rgba(255, 59, 48, 0.15);
      border-color: rgba(255, 59, 48, 0.4);
      color: #ff6b6b;
    }

    .btn-delete:hover {
      background: rgba(255, 59, 48, 0.25);
      border-color: rgba(255, 59, 48, 0.6);
      color: #ff8a8a;
      box-shadow: 0 0 15px rgba(255, 59, 48, 0.3);
      transform: translateY(-2px);
    }

    /* Empty State */
    .empty-state {
      text-align: center;
      padding: 4rem 2rem;
      color: rgba(255, 255, 255, 0.6);
    }

    .empty-state i {
      font-size: 5rem;
      color: rgba(0, 194, 255, 0.3);
      margin-bottom: 1.5rem;
      display: block;
    }

    .empty-state h3 {
      color: rgba(255, 255, 255, 0.8);
      font-size: 1.5rem;
      margin-bottom: 0.5rem;
    }

    .empty-state p {
      font-size: 1rem;
      margin-bottom: 2rem;
    }

    .empty-state .add-product-btn {
      display: inline-flex;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .admin-container {
        padding: 1rem;
      }

      .admin-header {
        padding: 1.5rem;
      }

      .admin-header h1 {
        font-size: 1.5rem;
      }

      .admin-header > div {
        flex-direction: column;
        align-items: flex-start !important;
        gap: 1rem;
      }

      .add-product-btn {
        width: 100%;
        justify-content: center;
      }

      .products-grid {
        grid-template-columns: 1fr;
        gap: 1rem;
      }

      .products-section {
        padding: 1.5rem;
      }
    }

    @media (max-width: 576px) {
      .product-actions {
        flex-direction: column;
        gap: 0.5rem;
      }

      .btn-action {
        width: 100%;
      }
    }
  </style>
  </head>

  <body class="auth-page">
    <%- include('../../shared/includes/header') %>

    <main style="padding-top: 120px; min-height: 100vh;">
      <div class="admin-container">
        
        <!-- Header Section -->
        <div class="admin-header">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h1><i class="bi bi-shop"></i> Product Administration</h1>
              <p>Manage your electronics inventory</p>
            </div>
            <a href="/admin/products/new" class="add-product-btn">
              <i class="bi bi-plus-circle"></i> Add Product
            </a>
          </div>
        </div>

        <!-- Products Grid Section -->
        <div class="products-section">
          <h2><i class="bi bi-grid-3x3-gap"></i> All Products</h2>
          
          <% if (products.length > 0) { %>
            <ul class="products-grid">
              <% for (const product of products) { %>
                <li>
                  <%- include('includes/product-item', { product: product }) %>
                </li>
              <% } %>
            </ul>
          <% } else { %>
            <div class="empty-state">
              <i class="bi bi-inbox"></i>
              <h3>No Products Yet</h3>
              <p>Start building your electronics inventory by adding your first product.</p>
              <a href="/admin/products/new" class="add-product-btn">
                <i class="bi bi-plus-circle"></i> Add Your First Product
              </a>
            </div>
          <% } %>
        </div>

      </div>
    </main>

    <%- include('../../shared/includes/footer') %>