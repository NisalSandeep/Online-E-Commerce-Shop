<form action="<%= submitPath %>?_csrf=<%= locals.csrfToken %>" method="POST" class="product-form" enctype="multipart/form-data">
                        
                        <div class="form-group"> 
                            <label for="title">
                                <i class="bi bi-tag"></i> Product Title
                            </label>  
                            <input 
                                type="text" 
                                id="title" 
                                name="title" 
                                class="form-control"
                                value="<%= product.title %>"
                                placeholder="Enter product name"
                                required>
                        </div>

                        <div class="form-group" id="image-upload-control">
                            <label for="image">
                                <i class="bi bi-image"></i> Product Image
                            </label>
                            <input 
                                type="file" 
                                id="image" 
                                name="image" 
                                class="form-control"
                                accept="image/png,image/jpg,image/jpeg" <% if (imageRequired) { %> required <% } %>>
                            <div class="form-hint">Upload PNG or JPG format</div>
                            <img id="image-preview" class="image-preview" src="" alt="Image preview">
                        </div>

                        <div class="form-group">
                            <label for="Summary">
                                <i class="bi bi-card-text"></i> Summary
                            </label>
                            <input 
                                type="text" 
                                id="Summary" 
                                name="Summary" 
                                class="form-control"
                                value="<%= product.summary %>"
                                placeholder="Brief product description"
                                maxlength="250"
                                required>
                            <div class="form-hint">Maximum 250 characters</div>
                        </div>

                        <div class="form-group">
                            <label for="price">
                                <i class="bi bi-currency-dollar"></i> Price
                            </label>
                            <input 
                                type="number" 
                                id="price" 
                                name="price" 
                                class="form-control"
                                placeholder="0.00"
                                min="0.01" 
                                step="0.01"
                                value="<%= product.price %>"
                                required>
                        </div>

                        <div class="form-group">
                            <label for="description">
                                <i class="bi bi-file-text"></i> Description
                            </label>
                            <textarea 
                                name="description" 
                                id="description" 
                                class="form-control"
                                placeholder="Enter detailed product description..."
                                rows="7"
                                required><%= product.description %></textarea>
                        </div>

                        <div class="form-actions">
                            <button type="reset" class="btn btn-reset">
                                <i class="bi bi-arrow-counterclockwise"></i> Reset
                            </button>
                            <button type="submit" class="btn btn-save">
                                <i class="bi bi-check-circle"></i> Save Product
                            </button>
                        </div>

                    </form>