<article class="product-item">
    <!-- Product Image Section -->
    <div class="product-image-wrapper">
        <img src="<%= product.imageUrl %>" alt="<%= product.title %>" class="product-image" loading="lazy">
        <div class="product-overlay">
            <i class="bi bi-eye-fill"></i>
        </div>
        <div class="product-badge">
            <i class="bi bi-lightning-charge-fill"></i> New
        </div>
    </div>
    
    <!-- Product Details -->
    <div class="product-content">
        <h2 class="product-title"><%= product.title %></h2>
        <p class="product-summary"><%= product.summary %></p>
        
        <div class="product-footer">
            <div class="product-price">
                <span class="price-label">Price</span>
                <span class="price-amount">
                    <i class="bi bi-currency-dollar"></i><%= product.price.toFixed(2) %>
                </span>
            </div>
        </div>
    </div>
    
    <!-- Action Buttons -->
    <div class="product-actions">
        <% if (locals.isAdmin) { %>
            <a href="/admin/products/<%= product.id %>" class="btn-action btn-edit">
                <i class="bi bi-pencil-square"></i>
                <span>Edit</span>
            </a>
            <button class="btn-action btn-delete" data-productid="<%= product.id %>" data-csrf="<%= locals.csrfToken %>">
                <i class="bi bi-trash3"></i>
                <span>Delete</span>
            </button>
        <% } else { %>
            <a href="/products/<%= product.id %>" class="btn-action btn-view">
                <i class="bi bi-cart-plus"></i>
                <span>Add to Cart</span>
            </a>
            <a href="/products/<%= product.id %>" class="btn-action btn-details">
                <i class="bi bi-info-circle"></i>
                <span>Details</span>
            </a>
        <% } %>
    </div>
</article>