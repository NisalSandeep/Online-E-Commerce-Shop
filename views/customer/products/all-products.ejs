<%- include('../../shared/includes/head', { pageTitle: 'All Products' }) %>
  <link rel="stylesheet" href="/styles/auth.css">
  <style>
    /* Customer Products Page Styling */
    .products-container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 2rem;
    }

    .products-header {
      background: rgba(10, 14, 39, 0.85);
      backdrop-filter: saturate(180%) blur(20px);
      -webkit-backdrop-filter: saturate(180%) blur(20px);
      border: 1px solid rgba(0, 194, 255, 0.3);
      border-radius: 16px;
      padding: 2rem;
      margin-bottom: 2rem;
      text-align: center;
      box-shadow: 
        0 8px 32px rgba(0, 0, 0, 0.3),
        0 0 20px rgba(0, 194, 255, 0.1),
        inset 0 1px 0 rgba(255, 255, 255, 0.05);
    }

    .products-header h1 {
      color: #00bcff;
      font-size: 2.5rem;
      font-weight: 700;
      margin: 0 0 0.5rem 0;
      text-shadow: 0 0 20px rgba(0, 188, 255, 0.4);
    }

    .products-header p {
      color: rgba(255, 255, 255, 0.8);
      margin: 0;
      font-size: 1.1rem;
    }

    /* Products Grid */
    .products-grid {
      list-style: none;
      padding: 0;
      margin: 0;
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 2rem;
    }

    .products-grid li {
      list-style: none;
    }

    /* Product Item Card */
    .product-item {
      background: rgba(10, 14, 39, 0.85);
      backdrop-filter: saturate(180%) blur(20px);
      -webkit-backdrop-filter: saturate(180%) blur(20px);
      border: 1px solid rgba(0, 194, 255, 0.2);
      border-radius: 16px;
      overflow: hidden;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      display: flex;
      flex-direction: column;
      height: 100%;
      box-shadow: 
        0 4px 20px rgba(0, 0, 0, 0.3),
        0 0 0 1px rgba(0, 194, 255, 0.1);
      position: relative;
    }

    .product-item:hover {
      transform: translateY(-10px) scale(1.02);
      border-color: rgba(0, 194, 255, 0.7);
      box-shadow: 
        0 15px 50px rgba(0, 0, 0, 0.5),
        0 0 50px rgba(0, 194, 255, 0.4),
        0 0 0 1px rgba(0, 194, 255, 0.3);
    }

    .product-image-wrapper {
      position: relative;
      width: 100%;
      padding-top: 75%;
      overflow: hidden;
      background: linear-gradient(135deg, rgba(0, 0, 0, 0.6) 0%, rgba(10, 14, 39, 0.8) 100%);
    }

    .product-image {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
      filter: brightness(0.9);
    }

    .product-item:hover .product-image {
      transform: scale(1.15) rotate(2deg);
      filter: brightness(1.1);
    }

    .product-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(135deg, rgba(0, 194, 255, 0.4) 0%, rgba(138, 43, 226, 0.4) 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      opacity: 0;
      transition: opacity 0.4s ease;
      backdrop-filter: blur(5px);
      -webkit-backdrop-filter: blur(5px);
    }

    .product-overlay i {
      color: white;
      font-size: 3.5rem;
      transform: scale(0) rotate(-180deg);
      transition: transform 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55);
      filter: drop-shadow(0 4px 10px rgba(0, 0, 0, 0.5));
    }

    .product-item:hover .product-overlay {
      opacity: 1;
    }

    .product-item:hover .product-overlay i {
      transform: scale(1) rotate(0deg);
    }

    /* Product Badge */
    .product-badge {
      position: absolute;
      top: 1rem;
      right: 1rem;
      background: linear-gradient(135deg, rgba(0, 194, 255, 0.9) 0%, rgba(138, 43, 226, 0.9) 100%);
      color: white;
      padding: 0.4rem 0.9rem;
      border-radius: 20px;
      font-size: 0.75rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      box-shadow: 
        0 4px 15px rgba(0, 194, 255, 0.4),
        inset 0 1px 0 rgba(255, 255, 255, 0.3);
      z-index: 10;
      display: flex;
      align-items: center;
      gap: 0.3rem;
      animation: pulse 2s ease-in-out infinite;
    }

    @keyframes pulse {
      0%, 100% {
        transform: scale(1);
        box-shadow: 0 4px 15px rgba(0, 194, 255, 0.4);
      }
      50% {
        transform: scale(1.05);
        box-shadow: 0 6px 20px rgba(0, 194, 255, 0.6);
      }
    }

    .product-badge i {
      font-size: 0.9rem;
    }

    .product-content {
      padding: 1.5rem;
      flex-grow: 1;
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .product-title {
      color: white;
      font-size: 1.35rem;
      font-weight: 700;
      margin: 0;
      line-height: 1.3;
      text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
      transition: color 0.3s ease;
    }

    .product-item:hover .product-title {
      color: #00e5ff;
    }

    .product-summary {
      color: rgba(255, 255, 255, 0.75);
      font-size: 0.95rem;
      margin: 0;
      flex-grow: 1;
      line-height: 1.6;
      display: -webkit-box;
      -webkit-line-clamp: 3;
      line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    .product-footer {
      margin-top: auto;
    }

    .product-price {
      display: flex;
      flex-direction: column;
      gap: 0.3rem;
    }

    .price-label {
      color: rgba(255, 255, 255, 0.5);
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 1px;
      font-weight: 600;
    }

    .price-amount {
      color: #00bcff;
      font-size: 2rem;
      font-weight: 700;
      display: flex;
      align-items: center;
      gap: 0.2rem;
      text-shadow: 
        0 0 20px rgba(0, 188, 255, 0.5),
        0 2px 4px rgba(0, 0, 0, 0.3);
      transition: all 0.3s ease;
    }

    .product-item:hover .price-amount {
      color: #00e5ff;
      transform: scale(1.05);
      text-shadow: 
        0 0 30px rgba(0, 229, 255, 0.7),
        0 2px 6px rgba(0, 0, 0, 0.4);
    }

    .price-amount i {
      font-size: 1.5rem;
    }

    .product-actions {
      padding: 1rem 1.5rem;
      background: rgba(0, 0, 0, 0.3);
      border-top: 1px solid rgba(0, 194, 255, 0.2);
      display: flex;
      gap: 0.75rem;
    }

    .btn-action {
      flex: 1;
      padding: 0.85rem 1rem;
      border-radius: 10px;
      border: 1px solid;
      font-size: 0.9rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      position: relative;
      overflow: hidden;
    }

    .btn-action::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
      transition: left 0.5s ease;
    }

    .btn-action:hover::before {
      left: 100%;
    }

    .btn-action span {
      position: relative;
      z-index: 1;
    }

    .btn-action i {
      font-size: 1.1rem;
      position: relative;
      z-index: 1;
    }

    /* Customer View Buttons */
    .btn-view {
      background: linear-gradient(135deg, rgba(0, 194, 255, 0.25) 0%, rgba(138, 43, 226, 0.25) 100%);
      border-color: rgba(0, 194, 255, 0.4);
      color: white;
      box-shadow: 0 4px 15px rgba(0, 194, 255, 0.2);
    }

    .btn-view:hover {
      background: linear-gradient(135deg, rgba(0, 194, 255, 0.4) 0%, rgba(138, 43, 226, 0.4) 100%);
      border-color: rgba(0, 194, 255, 0.7);
      color: white;
      transform: translateY(-3px);
      box-shadow: 
        0 6px 25px rgba(0, 194, 255, 0.4),
        0 0 30px rgba(0, 194, 255, 0.3);
    }

    .btn-details {
      background: rgba(255, 255, 255, 0.1);
      border-color: rgba(255, 255, 255, 0.3);
      color: rgba(255, 255, 255, 0.9);
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    .btn-details:hover {
      background: rgba(255, 255, 255, 0.15);
      border-color: rgba(255, 255, 255, 0.5);
      color: white;
      transform: translateY(-3px);
      box-shadow: 0 6px 25px rgba(255, 255, 255, 0.2);
    }

    /* Admin Buttons */
    .btn-edit {
      background: rgba(0, 194, 255, 0.15);
      border-color: rgba(0, 194, 255, 0.4);
      color: #00bcff;
      box-shadow: 0 4px 15px rgba(0, 194, 255, 0.2);
    }

    .btn-edit:hover {
      background: rgba(0, 194, 255, 0.25);
      border-color: rgba(0, 194, 255, 0.6);
      color: #00e5ff;
      box-shadow: 0 6px 25px rgba(0, 194, 255, 0.3);
      transform: translateY(-3px);
    }

    .btn-delete {
      background: rgba(255, 59, 48, 0.15);
      border-color: rgba(255, 59, 48, 0.4);
      color: #ff6b6b;
      box-shadow: 0 4px 15px rgba(255, 59, 48, 0.2);
    }

    .btn-delete:hover {
      background: rgba(255, 59, 48, 0.25);
      border-color: rgba(255, 59, 48, 0.6);
      color: #ff8a8a;
      box-shadow: 0 6px 25px rgba(255, 59, 48, 0.3);
      transform: translateY(-3px);
    }

    /* Empty State */
    .empty-state {
      background: rgba(10, 14, 39, 0.85);
      backdrop-filter: saturate(180%) blur(20px);
      -webkit-backdrop-filter: saturate(180%) blur(20px);
      border: 1px solid rgba(0, 194, 255, 0.2);
      border-radius: 16px;
      text-align: center;
      padding: 5rem 3rem;
      color: rgba(255, 255, 255, 0.6);
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    }

    .empty-state i {
      font-size: 6rem;
      color: rgba(0, 194, 255, 0.3);
      margin-bottom: 2rem;
      display: block;
    }

    .empty-state h3 {
      color: rgba(255, 255, 255, 0.9);
      font-size: 2rem;
      margin-bottom: 1rem;
    }

    .empty-state p {
      font-size: 1.1rem;
    }

    /* Responsive Design */
    @media (max-width: 1200px) {
      .products-grid {
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 1.5rem;
      }
    }

    @media (max-width: 768px) {
      .products-container {
        padding: 1rem;
      }

      .products-header {
        padding: 1.5rem;
      }

      .products-header h1 {
        font-size: 2rem;
      }

      .products-grid {
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 1.25rem;
      }

      .product-title {
        font-size: 1.2rem;
      }

      .price-amount {
        font-size: 1.75rem;
      }

      .product-content {
        padding: 1.25rem;
      }

      .product-actions {
        padding: 1rem;
        gap: 0.5rem;
      }

      .btn-action {
        padding: 0.75rem 0.85rem;
        font-size: 0.85rem;
      }

      .btn-action i {
        font-size: 1rem;
      }

      .product-badge {
        top: 0.75rem;
        right: 0.75rem;
        padding: 0.35rem 0.75rem;
        font-size: 0.7rem;
      }
    }

    @media (max-width: 576px) {
      .products-header h1 {
        font-size: 1.75rem;
      }

      .products-header p {
        font-size: 0.95rem;
      }

      .products-grid {
        grid-template-columns: 1fr;
      }

      .product-actions {
        flex-direction: column;
        gap: 0.6rem;
      }

      .btn-action {
        width: 100%;
        padding: 0.85rem 1rem;
        font-size: 0.9rem;
      }

      .empty-state {
        padding: 3rem 1.5rem;
      }

      .empty-state i {
        font-size: 4rem;
      }

      .empty-state h3 {
        font-size: 1.5rem;
      }

      .product-overlay i {
        font-size: 2.5rem;
      }
    }

    @media (max-width: 400px) {
      .products-header h1 {
        font-size: 1.5rem;
      }

      .price-amount {
        font-size: 1.5rem;
      }

      .product-title {
        font-size: 1.1rem;
      }

      .product-summary {
        font-size: 0.9rem;
        -webkit-line-clamp: 2;
        line-clamp: 2;
      }
    }
  </style>
  </head>

  <body class="auth-page">
    <%- include('../../shared/includes/header') %>

      <main style="padding-top: 120px; min-height: 100vh; padding-bottom: 3rem;">
        <div class="products-container">
          
          <!-- Products Header -->
          <div class="products-header">
            <h1><i class="bi bi-shop-window"></i> Our Electronics Store</h1>
            <p>Discover the latest technology and electronic devices</p>
          </div>

          <!-- Products Grid -->
          <% if (products && products.length > 0) { %>
            <ul class="products-grid">
              <% for (const product of products) { %>
                <li>
                  <%- include('../../shared/includes/product-item', { product: product }) %>
                </li>
              <% } %>
            </ul>
          <% } else { %>
            <div class="empty-state">
              <i class="bi bi-box-seam"></i>
              <h3>No Products Available</h3>
              <p>Check back soon for amazing electronics deals!</p>
            </div>
          <% } %>

        </div>
      </main>

      <%- include('../../shared/includes/footer') %>