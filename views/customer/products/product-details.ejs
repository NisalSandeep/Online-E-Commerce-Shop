  <body class="auth-page">
    <%- include('../../shared/includes/header') %>

    <main style="padding-top: 120px; min-height: 100vh; padding-bottom: 3rem;">
      <div class="product-details-container">
        
        <!-- Breadcrumb Navigation -->
        <nav class="breadcrumb">
          <a href="/"><i class="bi bi-house-door"></i> Home</a>
          <span>/</span>
          <a href="/products">Products</a>
          <span>/</span>
          <span class="current"><%= product.title %></span>
        </nav>

        <!-- Product Details Card -->
        <div class="product-details-card">
          
          <!-- Product Header: Image and Info -->
          <div class="product-details-header">
            
            <!-- Product Image Section -->
            <div class="product-image-section">
              <div class="product-badge">
                <i class="bi bi-lightning-charge-fill"></i> Featured
              </div>
              <img 
                src="<%= product.imageUrl %>" 
                alt="<%= product.title %>" 
                class="product-main-image"
                loading="lazy">
            </div>

            <!-- Product Info Section -->
            <div class="product-info-section">
              <h1 class="product-title"><%= product.title %></h1>
              
              <% if (product.summary) { %>
                <p class="product-summary"><%= product.summary %></p>
              <% } %>

              <!-- Price Section -->
              <div class="product-price-section">
                <span class="price-label">Price</span>
                <div class="price-amount">
                  <i class="bi bi-currency-dollar"></i><%= product.price.toFixed(2) %>
                </div>
              </div>

              <!-- Action Buttons -->
              <button class="add-to-cart-btn">
                <i class="bi bi-cart-plus-fill"></i>
                <span>Add to Cart</span>
              </button>

              <a href="/products" class="back-to-products-btn">
                <i class="bi bi-arrow-left"></i>
                <span>Back to Products</span>
              </a>
            </div>

          </div>

          <!-- Product Description Section -->
          <div class="product-description-section">
            <h2 class="description-title">
              <i class="bi bi-file-text"></i>
              Product Description
            </h2>
            <p class="description-content"><%= product.description %></p>
          </div>

        </div>

      </div>
    </main>

    <%- include('../../shared/includes/footer') %>