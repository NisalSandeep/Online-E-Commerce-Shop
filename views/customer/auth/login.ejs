<%- include('../../shared/includes/head', { pageTitle: 'SignUp' }) %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles/forms.css">
  <link rel="stylesheet" href="/styles/auth.css">
  </head>

  <body class="auth-page d-flex flex-column min-vh-100">
    <%- include('../../shared/includes/header') %>

      <% if(inputData.successMessage) { %>
        <div class="success-toast">
          <div class="success-toast-icon">âœ“</div>
          <div class="success-toast-content">
            <h3>Success!</h3>
            <p><%= inputData.successMessage %></p>
          </div>
        </div>
      <% } %>

      <main class="flex-grow-1 d-flex justify-content-center align-items-center p-3">
        <div class="card shadow-lg border-0 auth-transparent-card text-white w-100" style="max-width: 500px; border-radius: 1rem;">
          <div class="card-body p-4">
            <h2 class="text-center mb-4 fw-bold">Login</h2>
            <% if(inputData.errorMessage) { %>
              <section class="alert">
                <h2>Invalid Credentials</h2>
                <p><%= inputData.errorMessage %></p>
              </section>
            <% } %>

            <form action="/login" method="POST" class="needs-validation" novalidate>
                 <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
              <div class="mb-3">
                <label for="email" class="form-label fw-semibold">E-Mail</label>
                <input type="email" id="email" name="email" class="form-control custom-input" value="<%= inputData.email %>"
                  placeholder="Enter your email" required>
              </div>


              <div class="mb-3">
                <label for="password" class="form-label fw-semibold">Password</label>
                <input type="password" id="password" name="password" class="form-control custom-input"
                  placeholder="Enter a password" value="<%= inputData.password %>" minlength="8" required>
                <div class="form-text " style="color: rgb(158, 158, 158);">Minimum 8 characters required.</div>
              </div>

             

              <div class="d-grid mt-4">
                <button type="submit" class="btn auth-transparent-btn btn-lg rounded-pill shadow-sm">
                    Login
                </button>
              </div>

              <p class="text-center mt-3 mb-0">
                Don't have an account?
                <a href="/signup" class="text-decoration-none fw-semibold">Create a New user</a>
              </p>
            </form>
          </div>
        </div>
      </main>


      <%- include('../../shared/includes/footer') %>